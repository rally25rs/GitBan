@model IEnumerable<GitBan.Models.Project>

@{
    ViewBag.Title = "GitBan : Projects";
}

@section scripts
{
    <script type="text/javascript">
        var projectsJson = "@Json.Encode(Model)";
    </script>
    <script src="@Url.Content("/Scripts/projects.js")" type="text/javascript"></script>
}

<h2>Select a GitHub Project to View:</h2>

<ul data-bind="foreach: projects">
    <li data-bind="text: Name, click: $root.openProject"></li>
</ul>
